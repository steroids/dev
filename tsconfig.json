{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "reducers/*": [
        "steroids/react/reducers/*"
      ],
      "@steroidsjs/core/*": [
        "steroids/react/*"
      ],
      "@steroidsjs/native/*": [
        "steroids/react-native/*"
      ]
    }
  },
  "exclude": [
    "mobile/*",
    "steroids/react-native/*"
  ]
}
