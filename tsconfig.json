{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@steroidsjs/core/*": [
        "steroids/react/*"
      ],
      "@steroidsjs/bootstrap": [
        "steroids/react-bootstrap"
      ],
      "@steroidsjs/bootstrap/*": [
        "steroids/react-bootstrap/*"
      ]
    }
  },
  "include": [
    "frontend/**/*",
    "steroids/react/**/*",
    "steroids/react-bootstrap/**/*",
  ]
}
